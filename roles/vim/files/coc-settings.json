{
  "suggest.floatConfig": {
    "border": true
  },
  "diagnostic.floatConfig": {
    "border": true
  },
  "signature.floatConfig": {
    "border": true
  },
  "hover.floatConfig": {
    "border": true
  },
  "signature.enable": true,
  "signature.hideOnTextChange": false,
  "signature.preferShownAbove": true,
  "signature.target": "echo",
  // "suggest.noselect": true,
  // "coc.preferences.jumpCommand": "drop",

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": ["go", "cpp"],
  "list.normalMappings": {
     "t": "action:tabe",
     "v": "action:vsplit",
     "s": "action:split",
     "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
     "<C-t>": "action:tabe",
     "<C-v>": "action:vsplit",
     "<C-x>": "action:split",
     "<C-r>": "do:refresh",
     "<C-n>": "normal:j",
     "<C-p>": "normal:k"
  },
  //"latex.build.onSave": true,
  "languageserver": {
     "golang": {
        "filetypes": ["go"],
        "command": "gopls",
  //      "disableWorkspaceFolders": true,
        // "args": ["-remote=auto"],
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "trace.server": "verbose",
        "initializationOptions": {
          //"completeUnimported": true,
          //"matcher": "caseInsensitive",
          //"symbolMatcher": "caseInsensitive",
          //"deepCompletion": true,
          "usePlaceholders": false
       }
    },
    "racket": {
      // https://github.com/jeapostrophe/racket-langserver
      "filetypes": ["racket"],
      "command": "racket",
      "args": ["--lib", "racket-langserver"]
    },
    "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp"],
        "rootPatterns": ["*.cabal", "cabal.config", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["haskell", "lhaskell"]
    }
  },
  "clangd.arguments": ["--function-arg-placeholders=0"],
  "tsserver.formatOnType": false,
  // "emmet.includeLanguages": {"vue-html": "html", "javascript": "javascriptreact"},
  "translator.engines": [
    "youdao",
    "haici"
  ],
  "sumneko-lua.enableNvimLuaDev": true,
}
